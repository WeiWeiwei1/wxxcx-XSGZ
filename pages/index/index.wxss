
.commodity_image{
	height: 100%;
	width: 300rpx;
	margin: 0 0 30px 0;
}
.commodity_all{
	width: 100%;
	height: 25vh;
	margin: 5rpx 5rpx 5rpx 5rpx;
	display: flex;

	border-bottom: 1px solid #ddd;
}
.commodity_recommend{
	flex: 1;
}
.commodity_title{
width:7em; 
size: 10rpx;
display:block;
white-space:nowrap;
overflow:hidden;
text-overflow:ellipsis;
margin: 0 0 0 10rpx;
}
.bg_all{
	position: relative;
	top: 40px;
	background-color: #e6f8f9;

}
.commodity_prise{
	color: red;
	font-size: 35rpx;
	margin: 10rpx 0 0 10rpx;
}
.commodity_description{
	font-size: 30rpx;
	width:14em;
	white-space:nowrap;
	overflow:hidden;
	text-overflow:ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	margin: 10rpx 0 0 10rpx;
}
.commodity_voice{
	position: relative;
	background-color: #6fc2d0;
	top: 80rpx;
	left: 0rpx;
	width: 100rpx;
	height: 50rpx;
}
.van-icon{
	position: relative;
	top: -7rpx;
	left: 1rpx;
}
.topShow{
	width: 100%;
	height: 40px;
	background-color: blue;
	position: fixed;
	z-index: 100;
	overflow: hidden;
	top: 0px;
	right: 0px;
}
